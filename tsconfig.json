{
  // see https://www.typescriptlang.org/tsconfig to better understand tsconfigs
  "include": [
    "src/**/*",
    "src/**/*.d.ts",
  ],
  "exclude": [
    "node_modules",
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],

    "importHelpers": true,
    "rootDir": "./src",
    "allowJs": true,
    "checkJs": false,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  }
}
