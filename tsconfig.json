{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "./src",
    "importHelpers": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "node_modules",
  ]
}
