{
  "name": "iplds",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Blockvis",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "start": "rollup -cw",
    "build": "rollup -c",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "test": "yarn docker:start && yarn test:jest; yarn docker:stop",
    "test:jest": "jest",
    "lint": "eslint \"src/**/*\"",
    "lint:fix": "yarn lint --fix",
    "prepare": "yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@peculiar/webcrypto": "^1.1.7",
    "cborg": "^1.3.1",
    "ipfs-http-client": "^52.0.3",
    "multiformats": "^9.4.7"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.4",
    "@types/jest": "^27.0.1",
    "@types/node": "^14.17.17",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "husky": "^7.0.2",
    "jest": "^27.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rollup": "^2.56.3",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-ts": "^1.4.7",
    "size-limit": "^5.0.4",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=14.16.1",
    "npm": ">=6.14.12"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/index.esm.js",
      "limit": "10 KB"
    }
  ]
}
