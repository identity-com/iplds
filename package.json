{
  "name": "@identity.com/iplds",
  "version": "0.1.0",
  "description": "IPLDS - Secure DAG storage on IPFS",
  "keywords": [
    "ipfs",
    "ipld",
    "iplds",
    "dag",
    "storage"
  ],
  "bugs": "https://github.com/identity-com/iplds/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/identity-com/iplds"
  },
  "license": "MIT",
  "author": "Blockvis <info@blockvis.com> (https://blockvis.com)",
  "type": "module",
  "exports": "dist/index.js",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "start": "rollup -cw",
    "build": "rollup -c",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "test": "yarn docker:start && yarn test:jest; yarn docker:stop",
    "test:jest": "jest",
    "lint": "eslint \"**/*.ts\"",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install && yarn build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "dependencies": {
    "@peculiar/webcrypto": "^1.2.2",
    "@stablelib/base64": "^1.0.1",
    "@stablelib/keyagreement": "^1.0.1",
    "@stablelib/random": "^1.0.1",
    "@stablelib/x25519": "^1.0.1",
    "cborg": "^1.3.1",
    "elliptic": "^6.5.4",
    "ipfs-http-client": "^52.0.3",
    "multiformats": "^9.4.7"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.4",
    "@types/elliptic": "^6.4.14",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.11.1",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "electron": "^15.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-sonarjs": "^0.10.0",
    "husky": "^7.0.2",
    "jest": "^27.2.2",
    "lint-staged": "^11.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rollup": "^2.56.3",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^1.4.7",
    "size-limit": "^5.0.4",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tslib": "^2.2.0",
    "typescript": "^4.4.4"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=16.0"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "250 KB"
    }
  ],
  "lint-staged": {
    "**/*.ts": "yarn lint:fix"
  },
  "resolutions": {
    "**/ua-parser-js": "1.0.2"
  }
}
